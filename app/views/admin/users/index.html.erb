<h1>・管理画面・ユーザーの一覧</h1>
<table>
  <tr>
    <th>ユーザーid</th>
    <th>ユーザー名</th>
    <th>メールアドレス</th>
    <th>管理者権限</th>
    <th>タスク数</th>
  </tr>
  <% @users.each do |user| %>
    <tr class="user_table">
      <td><%= user.id %></td>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td>
      <% if user.admin == true%>
          <p>管理者</p>
      <% else %>
        <p>一般ユーザー</p>
      <% end %>
      <td><%= user.tasks.count %>
      <td>
      <%= link_to '詳細', admin_user_path(user.id) %>
      <%= link_to '編集', edit_admin_user_path(user.id) %>
      <%= link_to '削除', admin_user_path(user.id), method: :delete, data:{confirm: "本当に削除して大丈夫ですか？"} %>
      </td>
    </tr>
  <% end %>
</table>
<%= link_to "ユーザーの新規登録", new_admin_user_path %>
